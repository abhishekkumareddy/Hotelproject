<%  layout("/layout/noilerplate")%>
<%=success%>
    <!-- <h3>all listings</h3> -->
     <style>
      .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
                opacity: 0.7;

      }
      #filters{
        display: flex;
        flex-wrap:wrap;
      }
      .filter:hover{
        opacity: 1;
        cursor: pointer;
      }
      .filter p {
        font-size: 0.8rem;
      }
     </style>
     <div  id="filters">
               <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
               </div>
               <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Beds</p>
               </div>
                <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Mountain Rooms</p>
               </div>
               <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountain</p>
               </div>
                <div class="filter">
                <div><i class="fa-solid fa-fort-awesome"></i></div>
                <p>Fort</p>
               </div>
               <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
               </div>
                <div class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
               </div>
               <div class="filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
               </div>
     </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
 <%for (let data of alllisting){%>
    <a href="/listings/<%=data._id%>" class="listing-link">
    <div class="card col" >
  <img src="<%=data.image.url%>" class="card-img-top" alt="listings_image" style="height: 20rem;">
  <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text"><b><%=data.title%></b><br>&#8377;<%=data.price.toLocaleString("en-IN")%>/night</p>
  </div>
</div>
</a>
 <%}%>
   </div>

