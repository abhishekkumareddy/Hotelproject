<%  layout("/layout/noilerplate")%>


<h1>Edit the Details</h1>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <form method="post" action="/listings/<%=chat._id%>?_method=put" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input placeholder="enter title" name="listing[title]" class="form-control" value="<%=chat.title%>" required>
        <div class="invlid-feedback">enter the correct title</div>

        </div>
        <div class="mb-3">
            <label for="description" class="form-label">description</label> 
            <textarea  name="listing[description]" class="form-control" required><%=chat.description%> </textarea>
        <div class="invlid-feedback">enter the short description</div>

        </div>
       <div class="mb-3">
            <label for="image" class="form-label">upload image</label> 
            <input type="file" name="listing[image]" class="form-control" >
    
        </div>
        <div class="row">
            <div class="mb-3 col-4">
            <label for="price" class="form-label">price</label> 
            <input placeholder="enter price" name="listing[price]" class="form-control" value="<%=chat.price%>" required>
        <div class="invlid-feedback">enter the valid price</div>

        </div>
        <div class="mb-3 col-md-8">
            <label for="contry" class="form-label">contry</label> 
            <input placeholder="enter contry" name="listing[contry]" class="form-control" value="<%=chat.contry%>" required>
        <div class="invlid-feedback">enter the valid contry</div>

        </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">location</label> 
            <input placeholder="enter location" name="listing[location]" class="form-control" value="<%=chat.location%>" required>
        <div class="invlid-feedback">enter the valid location</div>

        </div>

    <button class="btn btn-dark edit-btn mt-3">Edit</button>
    <br><br>
    </form>
    </div>
</div>

<script src="/javascript/script.js"></script>